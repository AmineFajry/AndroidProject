<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
     <RelativeLayout
         android:layout_margin="10dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         >
         <TextView
             android:id="@+id/item_nomreg"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/item_default_nomreg"
             />

         <TextView
             android:id="@+id/item_code"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/item_default_codep"
             android:layout_below="@id/item_nomreg"
             />

         <TextView
             android:id="@+id/item_operator"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/item_default_operator"
             android:layout_below="@id/item_code"
             />

         <TextView
             android:id="@+id/item_tech"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/item_default_tech"
             android:layout_below="@id/item_operator"
             />

     </RelativeLayout>
</LinearLayout>